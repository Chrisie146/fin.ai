<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:type="TaskPaneApp">
    <Id>com.example.basicaddin</Id>
    <Version>1.0.0.0</Version>
    <ProviderName>Your Company</ProviderName>
    <DefaultLocale>en-US</DefaultLocale>
    <DisplayName DefaultValue="Basic Excel Add-in"/>
    <Description DefaultValue="A basic add-in to enhance Excel functionality."/>
    
    <!-- AppDomains for Web Services -->
    <AppDomains>
        <AppDomain>https://localhost</AppDomain>
    </AppDomains>
    
    <!-- Supported Hosts -->
    <Hosts>
        <Host Name="Workbook"/>
    </Hosts>
    
    <!-- Permissions -->
    <Permissions>ReadWriteDocument</Permissions>
    
    <!-- URLs -->
    <IconUrl DefaultValue="https://localhost:5500/icon.png"/>
    <HighResolutionIconUrl DefaultValue="https://localhost:5500/highresicon.png"/>
    <SupportUrl DefaultValue="https://yourcompany.com/support"/>
    
    <!-- Task Pane Source -->
    <TaskPaneApp>
        <SourceLocation DefaultValue="https://localhost:5500/index.html"/>
    </TaskPaneApp>
</OfficeApp>